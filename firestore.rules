rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Helper function to check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // Devices: Public read, Admin write
    match /devices/{deviceId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Lend Requests: Auth create, Admin or Owner read, Admin write
    match /lendRequests/{requestId} {
      allow create: if isAuth();
      allow read: if isAdmin() || (isAuth() && resource.data.requested_by_uid == request.auth.uid);
      allow update, delete: if isAdmin();
    }

    // Borrow Logs: Admin read/write only
    match /borrowLogs/{logId} {
      allow read, write: if isAdmin();
    }
  }
}
